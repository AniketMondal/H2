<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.ac.iitb.gymkhana.hostel2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".homeactivity.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar.GreyBack"
            android:screenOrientation="portrait"  />

        <activity
            android:name=".councilactivity.CouncilActivity"
            android:label="@string/title_activity_council"
            android:theme="@style/AppTheme.NoActionBar.GreyBack"
            android:screenOrientation="portrait"  />

        <activity
            android:name=".infoactivity.InfoActivity"
            android:label="@string/title_activity_info"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"  />

        <activity
            android:name=".settingsactivity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"  />


        <receiver android:name=".messnotification.BreakfastAlarmReceiver"
            android:enabled="true"
            android:process=":remote"/>

        <receiver android:name=".messnotification.LunchAlarmReceiver"
            android:enabled="true"
            android:process=":remote"/>

        <receiver android:name=".messnotification.TiffinAlarmReceiver"
            android:enabled="true"
            android:process=":remote"/>

        <receiver android:name=".messnotification.DinnerAlarmReceiver"
            android:enabled="true"
            android:process=":remote"/>

        <receiver android:name=".messnotification.AlarmBootReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"></action>
            </intent-filter>
        </receiver>


        <service android:name=".pushnotification.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>